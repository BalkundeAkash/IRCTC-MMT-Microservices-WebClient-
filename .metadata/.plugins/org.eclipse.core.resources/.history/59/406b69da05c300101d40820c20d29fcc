        button {
            padding: 10px 20px;
            margin-right: 10px;
            margin-top: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 6px;
        }

        button:hover {
            background-color: #0056b3;
        }

        input {
            padding: 10px;
            width: 220px;
            margin-right: 10px;
            border-radius: 6px;
            border: 1px solid #aaa;
        }

        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
            background: white;
        }

        th, td {
            padding: 12px;
            border: 1px solid #ccc;
            text-align: left;
        }

        th {
            background-color: #efefef;
