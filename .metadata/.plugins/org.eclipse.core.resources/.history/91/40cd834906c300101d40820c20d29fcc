  <script>
        let trains = [];
        let filteredTrains = [];
        let pendingDelete = null;

        const defaultConfig = {
            portal_title: "Train Search Portal",
            search_placeholder: "Search trains by number, name, or route...",
            add_button_text: "Add New Train"
        };

        const dataHandler = {
            onDataChanged(data) {
                trains = data || [];
                filteredTrains = [...trains];
                renderTrains();
                updateStats();
                hideLoading();
            }
        };

        async function initializeApp() {
            try {
                if (window.dataSdk) {
                    const result = await window.dataSdk.init(dataHandler);
                    if (!result.isOk) {
                        console.error("Failed to initialize data SDK");
                        hideLoading();
                    }
                }
            } catch (error) {
                console.error("Error initializing app:", error);
                hideLoading();
            }

            // Initialize Elements SDK
            if (window.elementSdk) {
                await window.elementSdk.init({
                    defaultConfig,
                    onConfigChange: async (config) => {
                        const title = config.portal_title || defaultConfig.portal_title;
                        const searchPlaceholder = config.search_placeholder || defaultConfig.search_placeholder;
                        const addButtonText = config.add_button_text || defaultConfig.add_button_text;

                        document.getElementById('portalTitle').textContent = title;
                        document.getElementById('searchInput').placeholder = searchPlaceholder;
                        document.getElementById('addTrainBtn').textContent = addButtonText;
                    },
                    mapToCapabilities: (config) => ({
                        recolorables: [],
                        borderables: [],
                        fontEditable: undefined,
                        fontSizeable: undefined
                    }),
                    mapToEditPanelValues: (config) => new Map([
                        ["portal_title", config.portal_title || defaultConfig.portal_title],
                        ["search_placeholder", config.search_placeholder || defaultConfig.search_placeholder],
                        ["add_button_text", config.add_button_text || defaultConfig.add_button_text]
                    ])
                });
            }

            setupEventListeners();
        }

        function setupEventListeners() {
            const searchInput = document.getElementById('searchInput');
            searchInput.addEventListener('input', handleSearch);
        }

        function handleSearch() {
            const query = document.getElementById('searchInput').value.toLowerCase().trim();
            
            if (!query) {
                filteredTrains = [...trains];
            } else {
                filteredTrains = trains.filter(train => 
                    train.trainNo.toLowerCase().includes(query) ||
                    train.trainName.toLowerCase().includes(query) ||
                    train.route.toLowerCase().includes(query)
                );
            }
            
            renderTrains();
        }

        function clearSearch() {
            document.getElementById('searchInput').value = '';
            filteredTrains = [...trains];
            renderTrains();
        }

        function toggleAddForm() {
            const form = document.getElementById('addTrainForm');
            const btn = document.getElementById('addTrainBtn');
            
            if (form.classList.contains('active')) {
                form.classList.remove('active');
                btn.textContent = window.elementSdk?.config?.add_button_text || defaultConfig.add_button_text;
                resetForm();
            } else {
                form.classList.add('active');
                btn.textContent = 'Cancel';
                document.getElementById('trainNo').focus();
            }
        }

        async function addTrain(event) {
            event.preventDefault();
            
            if (trains.length >= 999) {
                showMessage("Maximum limit of 999 trains reached. Please delete some trains first.", "error");
                return;
            }

            const submitBtn = document.getElementById('submitBtn');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner"></span>Adding...';

            const trainData = {
                trainNo: document.getElementById('trainNo').value.trim(),
                trainName: document.getElementById('trainName').value.trim(),
                departure: document.getElementById('departure').value,
                arrival: document.getElementById('arrival').value,
                duration: document.getElementById('duration').value.trim(),
                price: parseInt(document.getElementById('price').value),
                availableSeats: parseInt(document.getElementById('availableSeats').value),
                route: document.getElementById('route').value.trim()
            };

            // Check for duplicate train numbers
            if (trains.some(train => train.trainNo === trainData.trainNo)) {
                showMessage("Train number already exists. Please use a different number.", "error");
                resetSubmitButton();
                return;
            }

            try {
                if (window.dataSdk) {
                    const result = await window.dataSdk.create(trainData);
                    
                    if (result.isOk) {
                        showMessage("Train added successfully!", "success");
                        resetForm();
                        toggleAddForm();
                    } else {
                        showMessage("Failed to add train. Please try again.", "error");
                    }
                } else {
                    showMessage("Data storage not available.", "error");
                }
            } catch (error) {
                showMessage("An error occurred while adding the train.", "error");
            }

            resetSubmitButton();
        }

        function resetSubmitButton() {
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.disabled = false;
            submitBtn.innerHTML = 'Add Train';
        }

        function resetForm() {
            document.getElementById('trainForm').reset();
        }

        function showDeleteConfirm(train, cardElement) {
            // Hide any existing confirmation
            hideDeleteConfirm();
            
            const confirmDiv = document.createElement('div');
            confirmDiv.className = 'confirm-delete active';
            confirmDiv.innerHTML = `
                <div>Are you sure you want to delete train ${train.trainNo} - ${train.trainName}?</div>
                <div class="confirm-buttons">
                    <button class="btn btn-danger btn-small" onclick="confirmDelete('${train.__backendId}')">Delete</button>
                    <button class="btn btn-secondary btn-small" onclick="hideDeleteConfirm()">Cancel</button>
                </div>
            `;
            
            cardElement.appendChild(confirmDiv);
            pendingDelete = train;
        }

        function hideDeleteConfirm() {
            const confirmDivs = document.querySelectorAll('.confirm-delete');
            confirmDivs.forEach(div => div.remove());
            pendingDelete = null;
        }

        async function confirmDelete(trainId) {
            if (!pendingDelete) return;
            
            try {
                if (window.dataSdk) {
                    const result = await window.dataSdk.delete(pendingDelete);
                    
                    if (result.isOk) {
                        showMessage("Train deleted successfully!", "success");
                    } else {
                        showMessage("Failed to delete train. Please try again.", "error");
                    }
                } else {
                    showMessage("Data storage not available.", "error");
                }
            } catch (error) {
                showMessage("An error occurred while deleting the train.", "error");
            }
            
            hideDeleteConfirm();
        }

        function renderTrains() {
            const container = document.getElementById('trainsContainer');
            
            if (filteredTrains.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">ðŸš‚</div>
                        <h3>No trains found</h3>
                        <p>${trains.length === 0 ? 'Add your first train to get started!' : 'Try adjusting your search criteria.'}</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = filteredTrains.map(train => `
                <div class="train-card" id="train-${train.__backendId}">
                    <button class="delete-btn" onclick="showDeleteConfirm(${JSON.stringify(train).replace(/"/g, '&quot;')}, document.getElementById('train-${train.__backendId}'))" title="Delete train">Ã—</button>
                    <div class="train-header">
                        <div>
                            <span class="train-number">${train.trainNo}</span>
                            <span class="train-name">${train.trainName}</span>
                        </div>
                    </div>
                    <div class="train-details">
                        <div class="detail-item">
                            <div class="detail-label">Departure</div>
                            <div class="detail-value">${formatTime(train.departure)}</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">Arrival</div>
                            <div class="detail-value">${formatTime(train.arrival)}</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">Duration</div>
                            <div class="detail-value">${train.duration}</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">Price</div>
                            <div class="detail-value price">â‚¹${train.price}</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">Available Seats</div>
                            <div class="detail-value seats-available">${train.availableSeats}</div>
                        </div>
                        <div class="detail-item" style="grid-column: 1 / -1;">
                            <div class="detail-label">Route</div>
                            <div class="detail-value">${train.route}</div>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function updateStats() {
            const totalTrains = trains.length;
            const totalSeats = trains.reduce((sum, train) => sum + train.availableSeats, 0);
            const avgPrice = totalTrains > 0 ? Math.round(trains.reduce((sum, train) => sum + train.price, 0) / totalTrains) : 0;

            document.getElementById('totalTrains').textContent = totalTrains;
            document.getElementById('totalSeats').textContent = totalSeats;
            document.getElementById('avgPrice').textContent = `â‚¹${avgPrice}`;
        }

        function formatTime(timeString) {
            const [hours, minutes] = timeString.split(':');
            const hour = parseInt(hours);
            const ampm = hour >= 12 ? 'PM' : 'AM';
            const displayHour = hour % 12 || 12;
            return `${displayHour}:${minutes} ${ampm}`;
        }

        function hideLoading() {
            const loadingState = document.getElementById('loadingState');
            if (loadingState) {
                loadingState.style.display = 'none';
            }
        }

        function showMessage(message, type) {
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.textContent = message;
            
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.style.animation = 'slideOut 0.3s ease';
                setTimeout(() => {
                    if (document.body.contains(toast)) {
                        document.body.removeChild(toast);
                    }
                }, 300);
            }, 3000);
        }

        // Initialize the app when the page loads
        document.addEventListener('DOMContentLoaded', initializeApp);
    </script>
 <script>(function(){function c(){var b=a.contentDocument||a.contentWindow.document;if(b){var d=b.createElement('script');d.innerHTML="window.__CF$cv$params={r:'99f83842d5e77629',t:'MTc2MzMwOTAyMS4wMDAwMDA='};var a=document.createElement('script');a.nonce='';a.src='/cdn-cgi/challenge-platform/scripts/jsd/main.js';document.getElementsByTagName('head')[0].appendChild(a);";b.getElementsByTagName('head')[0].appendChild(d)}}if(document.body){var a=document.createElement('iframe');a.height=1;a.width=1;a.style.position='absolute';a.style.top=0;a.style.left=0;a.style.border='none';a.style.visibility='hidden';document.body.appendChild(a);if('loading'!==document.readyState)c();else if(window.addEventListener)document.addEventListener('DOMContentLoaded',c);else{var e=document.onreadystatechange||function(){};document.onreadystatechange=function(b){e(b);'loading'!==document.readyState&&(document.onreadystatechange=e,c())}}}})();</script></body>
