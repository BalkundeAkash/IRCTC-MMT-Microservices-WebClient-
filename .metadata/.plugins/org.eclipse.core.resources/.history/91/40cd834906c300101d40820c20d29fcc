 <body>
  <main class="container">
   <header class="header">
    <h1 class="portal-title" id="portalTitle">Train Search Portal</h1>
    <p class="subtitle">Search and manage train schedules</p>
   </header>
   <section class="search-section">
    <div class="search-bar"><input type="text" class="search-input" id="searchInput" placeholder="Search trains by number, name, or route..."> <button class="btn btn-secondary" onclick="clearSearch()">Clear</button> <button class="btn btn-primary" id="addTrainBtn" onclick="toggleAddForm()">Add New Train</button>
    </div>
    <div class="add-train-form" id="addTrainForm">
     <h3 style="margin-top: 0; color: #495057;">Add New Train</h3>
     <form id="trainForm" onsubmit="addTrain(event)">
      <div class="form-grid">
       <div class="form-group"><label class="form-label">Train Number</label> <input type="text" class="form-input" id="trainNo" required>
       </div>
       <div class="form-group"><label class="form-label">Train Name</label> <input type="text" class="form-input" id="trainName" required>
       </div>
       <div class="form-group"><label class="form-label">Departure Time</label> <input type="time" class="form-input" id="departure" required>
       </div>
       <div class="form-group"><label class="form-label">Arrival Time</label> <input type="time" class="form-input" id="arrival" required>
       </div>
       <div class="form-group"><label class="form-label">Duration</label> <input type="text" class="form-input" id="duration" placeholder="e.g., 5h 30m" required>
       </div>
       <div class="form-group"><label class="form-label">Price (â‚¹)</label> <input type="number" class="form-input" id="price" min="0" required>
       </div>
       <div class="form-group"><label class="form-label">Available Seats</label> <input type="number" class="form-input" id="availableSeats" min="0" required>
       </div>
       <div class="form-group"><label class="form-label">Route</label> <input type="text" class="form-input" id="route" placeholder="e.g., Delhi - Mumbai" required>
       </div>
      </div>
      <div style="display: flex; gap: 10px;"><button type="submit" class="btn btn-primary" id="submitBtn">Add Train</button> <button type="button" class="btn btn-secondary" onclick="toggleAddForm()">Cancel</button>
      </div>
     </form>
    </div>
   </section>
   <section class="trains-section">
