    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IRCTC â€“ MMT Train Search</title>

    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        body {
            background: #f6f9fc;
        }
    </style>
</head>

<body class="min-h-screen flex flex-col justify-start items-center p-6">

    <!-- CARD -->
    <div class="w-full max-w-2xl bg-white shadow-xl rounded-2xl p-6 border border-gray-200">

        <h1 class="text-3xl font-bold text-gray-800 mb-4 text-center">
            IRCTC Train Search (Client: MMT)
        </h1>

        <p class="text-center text-gray-600 mb-6">
            Search trains and view real-time data fetched using Spring Boot WebClient.
        </p>

        <!-- FORM -->
        <form id="searchForm" class="space-y-4">
            <div>
                <label class="block text-gray-700 font-semibold">Source Station</label>
                <input type="text" id="source" required placeholder="Enter Source Code (e.g., PUNE)"
                       class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 
                       focus:ring-blue-500">
            </div>

            <div>
                <label class="block text-gray-700 font-semibold">Destination Station</label>
                <input type="text" id="destination" required placeholder="Enter Destination Code (e.g., MUM)"
                       class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 
                       focus:ring-blue-500">
            </div>

            <div>
                <label class="block text-gray-700 font-semibold">Travel Date</label>
                <input type="date" id="date" required
                       class="w-full px-4 py-2 rounded-lg border border-gray-300 
                       focus:ring-2 focus:ring-blue-500">
            </div>

            <button type="submit"
                class="w-full bg-blue-600 text-white font-bold py-2 rounded-xl 
                hover:bg-blue-700 transition">
                Search Trains
            </button>
        </form>
    </div>

    <!-- RESULTS SECTION -->
    <div id="resultSection" class="w-full max-w-3xl mt-10 hidden">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Available Trains</h2>

        <div class="overflow-x-auto shadow-lg rounded-xl">
            <table class="w-full text-left">
                <thead class="bg-blue-600 text-white">
                    <tr>
                        <th class="p-3">Train No</th>
                        <th class="p-3">Name</th>
                        <th class="p-3">Departure</th>
                        <th class="p-3">Arrival</th>
                    </tr>
                </thead>
                <tbody id="trainBody" class="bg-white"></tbody>
            </table>
        </div>
    </div>

    <!-- JS -->
    <script>
        document.getElementById("searchForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const src = document.getElementById("source").value;
            const dest = document.getElementById("destination").value;
            const date = document.getElementById("date").value;

            const response = await fetch(
                `/mmt/trains?src=${src}&dest=${dest}&date=${date}`
            );

            const data = await response.json();

            const tableBody = document.getElementById("trainBody");
            tableBody.innerHTML = ""; // clear table before new results

            data.forEach(train => {
                const row = `
                    <tr class="border-b">
                        <td class="p-3">${train.trainNumber}</td>
                        <td class="p-3">${train.trainName}</td>
                        <td class="p-3">${train.departureTime}</td>
                        <td class="p-3">${train.arrivalTime}</td>
                    </tr>
                `;
                tableBody.innerHTML += row;
            });

            document.getElementById("resultSection").classList.remove("hidden");
        });
    </script>

</body>
</html>
